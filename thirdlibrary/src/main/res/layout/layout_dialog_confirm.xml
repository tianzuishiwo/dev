<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/corners_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:textColor="@color/gowild_black"
            android:id="@+id/tv_dialog_title"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16dp"
            android:text="提示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_dialog_centent"
            android:layout_below="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:maxWidth="300dp"
            android:layout_margin="16dp"
            android:textColor="@color/gowild_color_33"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="15dp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gowild_default_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:text="取消"
            style="@style/styleOfCancel"/>

        <View
            android:id="@+id/line_split"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gowild_default_line" />
        <TextView
            android:id="@+id/btn_confirm"
            android:text="好的"
            style="@style/styleOfConfirm"/>
    </LinearLayout>

</LinearLayout>